<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.two95.hibstud.Student" table="student" >
        <id name="name" type="string">
            <column name="name" length="10" not-null="true" unique="true" />
            <generator class="assigned" />
        </id>
        <property name="id" type="string">
            <column name="id" length="10" not-null="true" unique="true" />
        </property>
        <property name="age" type="int">
            <column name="age" length="20" not-null="true" unique="true" />
        </property>
    </class>
</hibernate-mapping>